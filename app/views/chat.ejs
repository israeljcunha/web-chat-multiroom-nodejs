		<script src="/socket.io/socket.io.js"> </script>

		<script>
			var socket = io('http://127.0.0.1:3000');

			$('#enviar_mensagem').click(function (params) {
				socket.emit(
					'msgParaServidor',
					{
						apelido: $('#apelido').val(), 
						mensagem:  $('#mensagem').val(),
						apelido_atualizado_nos_clientes:  $('#apelido_atualizado_nos_clientes').val()
					}
				);
				
				$('#mensagem').val('');
				$('#apelido_atualizado_nos_clientes').val(1);
			})

			socket.on('msgParaCliente', function (params) {
				var html = '';

				html += '<div class="dialogo" >';
					html += '<h4>' + params.apelido + '</h4>'
					html += '<p>' + params.mensagem + '</p>'
				html += '</div>'

				$('#dialogos').append(html);
				window.scrollTo(0, document.body.scrollHeight);
			})

			// participantesParaClientes

			socket.on('participantesParaClientes', function (params) {
				var html = '';

				html += '<apan class="participante" >';
					html += '<img src="images/ico_usuario.png" />';
					html += params.apelido
					// html += '<p>' + params.mensagem + '</p>'
				html += '</apan>'

				$('#pessoas').append(html);
			})

